<div class="dialogue js-dialogue {{className}}">
	<span class="dialogue-close icon-cross js-dialogue-close">&times;</span>
	<h6 class="dialogue-title">{{title}}</h6>

{{#description}}

	<p class="dialogue-description">{{description}}</p>

{{/description}}

	<div class="dialogue-actions">

{{#actions}}

		<span class="dialogue-action js-dialogue-action-{{name}}" data-name="{{name}}">{{name}}</span>

{{/actions}}

	</div>
</div>
